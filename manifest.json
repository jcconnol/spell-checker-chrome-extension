{
    "name": "Spell Check Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Click to open Spell Checker",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "24": "images/icon.png",
            "32": "images/icon.png"
        }
    },
    "icons": { 
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "description": "This extension checks the page for spelling errors.",
    "content_scripts": [{
            "matches": ["<all_urls>"],
            "js": ["content.js"]
    }],
    "web_accessible_resources": [{
        "resources": [ "dictionary.json" ],
        "matches": ["<all_urls>"]
    }],
    "permissions": [
        "activeTab",
        "storage"
    ]
}